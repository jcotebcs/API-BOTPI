{
  "name": "api-botpi",
  "version": "1.0.0",
  "description": "Comprehensive Node.js API project with extensive third-party integrations",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'Build process - add your build steps here'",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "api",
    "node.js",
    "express",
    "rest",
    "authentication",
    "payments",
    "cloud-services",
    "monitoring"
  ],
  "author": "API-BOTPI Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.17.3",
    "cookie-parser": "^1.4.6",
    "pg": "^8.11.3",
    "mongoose": "^8.0.3",
    "redis": "^4.6.11",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-github2": "^0.1.12",
    "passport-facebook": "^3.0.0",
    "stripe": "^14.10.0",
    "paypal-rest-sdk": "^1.8.1",
    "@sendgrid/mail": "^8.1.0",
    "mailgun.js": "^9.4.1",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "aws-sdk": "^2.1506.0",
    "@google-cloud/storage": "^7.7.0",
    "cloudinary": "^1.41.0",
    "@sentry/node": "^7.85.0",
    "bugsnag": "^2.20.0",
    "mixpanel": "^0.18.0",
    "amplitude": "^5.1.0",
    "newrelic": "^11.7.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "url": "^0.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "@types/node": "^20.10.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/migrations/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcotebcs/API-BOTPI.git"
  },
  "bugs": {
    "url": "https://github.com/jcotebcs/API-BOTPI/issues"
  },
  "homepage": "https://github.com/jcotebcs/API-BOTPI#readme"
}